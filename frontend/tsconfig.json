{
  "compilerOptions": {
    "jsx": "react-jsx",              // for React 17+ automatic runtime
    "lib": ["ES2021", "DOM"],        // include DOM types
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2021",
    "skipLibCheck": true,
    "strict": true,
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src"]
}